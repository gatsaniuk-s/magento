<config>
    <modules>
        <Dv_Designer>
            <version>0.0.2</version>
        </Dv_Designer>
    </modules>

    <global>
        <blocks>
            <dv_designer>
                <class>Dv_Designer_Block</class>
            </dv_designer>
        </blocks>
        <helpers>
            <dv_designer>
                <class>Dv_Designer_Helper</class>
            </dv_designer>
        </helpers>
        <models>
            <dv_designer>
                <class>Dv_Designer_Model</class>
                <resourceModel>dv_designer_resource</resourceModel>
            </dv_designer>
            <dv_designer_resource>
                <class>Dv_Designer_Model_Resource</class>
                <entities>
                    <designer>
                        <table>dv_designer</table>
                    </designer>
                </entities>
            </dv_designer_resource>
        </models>
        <resources>
            <dv_designer_setup>
                <setup>
                    <module>Dv_Designer</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </dv_designer_setup>
        </resources>
    </global>

    <admin>
        <routers>
            <dv_designer>
                <use>admin</use>
                <args>
                    <module>Dv_Designer</module>
                    <frontName>dv_designer</frontName>
                </args>
            </dv_designer>
        </routers>
    </admin>

    <adminhtml>
        <translate>
            <modules>
                <Dv_Designer>
                    <files>
                        <default>Dv_Designer.csv</default>
                    </files>
                </Dv_Designer>
            </modules>
        </translate>
    </adminhtml>

    <frontend>
        <layout>
            <updates>
                <dv_designer>
                    <file>dv/designer.xml</file>
                </dv_designer>
            </updates>
        </layout>
        <routers>
            <dv_designer>
                <use>standard</use>
                <args>
                    <module>Dv_Designer</module>
                    <frontName>designer</frontName>
                </args>
            </dv_designer>
        </routers>
        <translate>
            <modules>
                <Dv_Designer>
                    <files>
                        <default>Dv_Designer.csv</default>
                    </files>
                </Dv_Designer>
            </modules>
        </translate>
    </frontend>

    <default>
        <web>
            <routers>
                <dv_designer>
                    <area>frontend</area>
                    <class>Dv_Designer_Controller_Router</class>
                </dv_designer>
            </routers>
        </web>
    </default>
</config>
